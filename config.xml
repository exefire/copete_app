<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.exefire.copete"
        versionCode="10"
        version   = "1.0.0">

        <name>Aloo Copete</name>

        <description>
            Esta aplicaci√≥n es para hacer pedidos de licores en Santiago de Chile.
        </description>

        <author href="http://www.exefire.com" email="egallardo@exefire.com">
            Exequiel Gallardo
        </author>
        
        <preference name="phonegap-version" value="2.9.0" />
				<preference name="orientation" value="portrait" />
				<preference name="prerendered-icon" value="true" />
				<preference name="target-device" value="handset" />

        <!-- if a single icon is specified then Build will use it for all platforms -->
        <icon src="icons/icon.png" />
        
        <!-- Android requires specific dimensions; ldpi, mdpi, and hdpi respectively -->
				<icon src="icons/android/icon-android-36.png" gap:platform="android" gap:density="ldpi" />
				<icon src="icons/android/icon-android-48.png" gap:platform="android" gap:density="mdpi" />
				<icon src="icons/android/icon-android-72.png" gap:platform="android" gap:density="hdpi" />
				<icon src="icons/android/icon-android-72.png" gap:platform="android" gap:density="xhdpi" />
				
				<icon src="icons/ios/icon-iphone-72.png" gap:platform="ios" width="57" height="57" />
				<icon src="icons/ios/icon-iphone-72.png" gap:platform="ios" width="72" height="72" />
				<icon src="icons/ios/icon-iphone-114.png" gap:platform="ios" width="114" height="114" />
				
				<!-- retina iPad support: PhoneGap 2.5.0+ only -->
				<icon src="icons/ios/icon-iphone-114.png" gap:platform="ios" width="144" height="144" />
				
						
				<gap:splash src="splash.png" />
				
				<gap:splash src="splash/ios/Default.png" width="320" height="480" />
				<gap:splash src="splash/ios/Default_at_2x.png" width="640" height="960" />
				<gap:splash src="splash/ios/Default_iphone5.png" width="640" height="1136" />
				<gap:splash src="splash/ios/Default-Landscape.png" width="1024" height="768" />
				<gap:splash src="splash/ios/Default-Portrait.png" width="768" height="1024" />
    
        <!-- if a single splash screen is specified it will be used for all platforms. Multiple splash screens are recommended for iOS -->
        <!--<gap:splash src="splashes/splash.png" />-->
				
        <!-- to enable individual permissions use the following examples -->
        <feature name="http://api.phonegap.com/1.0/geolocation"/>

        <access origin="http://phonegap.com" subdomains="true" />
				
				<plugin name="Geolocation" value="org.apache.cordova.GeoBroker" />
				
				<plugin name="Geolocation" value="CDVLocation" />
				
				<access origin="*" />

    </widget>